---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <main class="min-h-screen flex justify-center items-center px-6 xl:px-0">
        <section class="space-y-4 xl:space-y-2">
            <h1 class="text-2xl font-bold">Error 404</h1>
            <h2 class="text-lg">Página no encontrada</h2>
            <p class="text-sm jetbrains-mono xl:w-3/4">
                ¡Hola! Lo sentimos, pero no pudimos encontrar lo que buscabas.
                Verifica que la dirección URL sea correcta.
            </p>
            <div class="mt-4">
                <a href="/" class="uppercase underline underline-offset-2"
                    >Ir al inicio</a
                >
            </div>
        </section>
    </main>
</BaseLayout>
