---
import Prose from "./Prose.astro";
import MainLayout from "./MainLayout.astro";
const { frontmatter } = Astro.props;
---

<MainLayout>
    <header class="mb-12 space-y-4">
        <h1 class="text-2xl font-bold text-black">{frontmatter.title}</h1>
        <p class="jetbrains-mono text-md">
            {frontmatter.desc}
        </p>
        <a href="/" class="block uppercase underline underline-offset-2"
            >Ir a inicio</a
        >
    </header>
    <main>
        <Prose frontmatter={frontmatter}>
            <slot />
        </Prose>
    </main>
</MainLayout>
